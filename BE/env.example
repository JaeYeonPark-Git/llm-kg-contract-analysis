# -*- coding: utf-8 -*-
# AutoSchemaKG 백엔드 서버 환경변수 설정 예시
# 이 파일을 .env로 복사하고 실제 값으로 수정하세요

# OpenAI API 설정
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
DEFAULT_MODEL=gpt-4o-mini
DEFAULT_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Neo4j 데이터베이스 설정
NEO4J_URI=neo4j://127.0.0.1:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=neo4j

# 데이터 디렉토리 설정
DATA_DIRECTORY=BE/example_data
IMPORT_DIRECTORY=BE/import
PRECOMPUTE_DIRECTORY=precompute

# 서버 설정
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=True

# 로깅 설정
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# 파일 업로드 설정
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=json,txt,md,pdf

# CORS 설정
CORS_ORIGINS=*
CORS_CREDENTIALS=True
CORS_METHODS=*
CORS_HEADERS=*

# 파이프라인 설정
DEFAULT_START_STEP=0
DEFAULT_KEYWORD=contract_v5

# 임베딩 설정
EMBEDDING_BATCH_SIZE=40
NODE_EDGE_BATCH_SIZE=256
NORMALIZE_EMBEDDINGS=True

# FAISS 설정
FAISS_INDEX_TYPE=HNSW,Flat
FAISS_GPU=False